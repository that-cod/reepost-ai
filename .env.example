# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://user:password@host:port/database?pgbouncer=true"
DIRECT_URL="postgresql://user:password@host:port/database" # For migrations

# ============================================================================
# NEXTAUTH
# ============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# ============================================================================
# LINKEDIN OAUTH
# ============================================================================
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# ============================================================================
# SUPABASE
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
SUPABASE_STORAGE_BUCKET="easygen-uploads"

# ============================================================================
# AI PROVIDERS
# ============================================================================
# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

# Anthropic (Claude)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"
ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"

# Default AI Provider (openai or anthropic)
DEFAULT_AI_PROVIDER="openai"

# ============================================================================
# STRIPE
# ============================================================================
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Stripe Price IDs
STRIPE_PRICE_ID_STARTER="price_starter_id"
STRIPE_PRICE_ID_PRO="price_pro_id"
STRIPE_PRICE_ID_ENTERPRISE="price_enterprise_id"

# ============================================================================
# RATE LIMITING (Upstash Redis)
# ============================================================================
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# ============================================================================
# CRON JOB AUTHENTICATION
# ============================================================================
CRON_SECRET="your-cron-secret-key-generate-with-openssl-rand-base64-32"

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV="development"
APP_URL="http://localhost:3000"
LOG_LEVEL="info" # debug, info, warn, error

# ============================================================================
# RATE LIMITS
# ============================================================================
# Requests per window
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="60000" # milliseconds

# ============================================================================
# FEATURES FLAGS
# ============================================================================
ENABLE_ANALYTICS="true"
ENABLE_EMAIL_NOTIFICATIONS="false"
ENABLE_LINKEDIN_AUTO_PUBLISH="true"
